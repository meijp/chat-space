.chat-group-form
  %h1 新規チャットグループ
  %form#new_chat_group.new_chat_group{"accept-charset" => "UTF-8", :action => "/chat_groups", :method => "post"}
    .chat-group-form__errors
      = form_for @group do |f|
        - if @group.errors.any?
          %h2
            = @group.errors.count
            件のエラーが発生しました。
          %ul
            -@group.errors.full_messages.each do |message|
              %li
                =message
  = form_for @group do |f|
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :グループ名, class: "chat-group-form__label", for: "chat_group_name"
      .chat-group-form__field--right
        = f.text_field :name, placeholder: "グループ名を入力してください", class: "chat-group-form__input"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        %label.chat-group-form__label{:for => "chat_group_チャットメンバーを追加"} チャットメンバーを追加
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          %input#user-search-field.chat-group-form__input{:placeholder => "追加したいユーザー名を入力してください", :type => "text", class: "chat-group-form__text"}/
        #user-search-result

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :チャットメンバー, class: "chat-group-form__label", for: "chat_group_チャットメンバー"
      .chat-group-form__field--right
        #chat-group-users
          %p.chat-group-user__name


    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "Save", name: "commit", class: "chat-group-form__action-btn"
